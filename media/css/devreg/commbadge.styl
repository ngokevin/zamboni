@import 'lib';


/* Jack Devhub base styles. */
.island {
    background: #fff;
    border: 1px solid $taupe;
    border-radius: 5px;
    box-shadow: 0 -2px 0 rgba($taupe,.2) inset, 0 0 1px rgba(0,0,0,.1);
    display: block;
    margin-bottom: 15px;
    padding: 15px;
    &.swagger {
        gradient-two-color(#fff, #f3f3f3);
    }
    > section {
        border-bottom: 1px solid #C9DDF2;
        border-top: 1px solid transparent;
        margin: 0 -14px;
        padding: 14px;
        float: left;
        width: 100%;
        &:first-child {
            border-top: 0;
            padding-top: 0;
        }
        &:last-child {
            border-bottom: 0;
        }
    }
}


/* Make page structure look like devhub. */
ol, ul {
    list-style: none;
}

main {
    margin: 0 auto;
    max-width: 960px;
    position: relative;
    &:before, &:after {
        content: ' ';
        display: table;
    }
    &:after {
        clear: both;
    }
    header {
        margin-bottom: 13px;
        h1 {
            font-size: 32px;
            font-weight: 300;
            line-height: 40px;
        }
    }
}

#page {
    float: right;
    width: 74%;
}

.pad {
    margin: 0 auto;
    width: 960px;
}

/* Make header like devhub. */
header.site-header {
    top: -1px;
    h1.site {
        width: 300px;
    }
    span.wordmark {
        background: url(../../img/ecosystem/logo.png) no-repeat 0 40%;
        max-width: 300px;
        width: 300px;
    }
    > nav {
        max-width: 960px;
    }
}

/* Use mkt/devreg/header.styl settings button over Commbadge's. */
div.act-tray.active {
    .header-button.settings {
        background-image: none;
        width: 50px;
        &:after {
            display: none;
        }
    }
    .account-links {
        display: none;
    }
}

.header-button.settings {
    margin-top: 0;
    &.settings {
        background: none;
    }
}

.account-links-wrapper {
    margin: 0 auto;
    max-width: 960px;
    position: relative;
}

div.account-links ul {
    position: relative;
    right: 11px;
    top: -70px;
    li a {
        font-size: 13px;
    }
}
